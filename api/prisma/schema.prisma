generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

enum OrderStatus {
  PENDING
  RECEIVED
  CANCELLED
}

enum MovementType {
  ENTRY
  EXIT
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String
  role         UserRole @default(USER)
  createdAt    DateTime @default(now())
}

model Category {
  id          String          @id @default(cuid())
  name        String
  description String?
  items       InventoryItem[]
  createdAt   DateTime        @default(now())
}

model InventoryItem {
  id          String       @id @default(cuid())
  name        String
  sku         String       @unique
  categoryId  String
  category    Category     @relation(fields: [categoryId], references: [id])
  quantity    Int
  minQuantity Int
  price       Decimal
  lastUpdated DateTime     @updatedAt
  movements   ProductMovement[]
}

model PurchaseOrder {
  id         String      @id @default(cuid())
  supplier   String
  status     OrderStatus @default(PENDING)
  items      Json
  totalValue Decimal
  createdAt  DateTime    @default(now())
  receivedAt DateTime?
}

model ProductMovement {
  id        String       @id @default(cuid())
  itemId    String
  item      InventoryItem @relation(fields: [itemId], references: [id])
  type      MovementType
  quantity  Int
  reason    String
  createdAt DateTime     @default(now())
}
